// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  password      String?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Project {
  id          String   @id @default(cuid())
  title       String
  description String
  category    String   // frontend, backend, fullstack, devops
  tags        String   // JSON string array
  link        String?
  github      String?
  image       String?
  featured    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Skill {
  id        String   @id @default(cuid())
  name      String
  category  String   // frontend, backend, devops, database, ai
  level     Int      @default(0)
  icon      String?  // React Icon name
  color     String?  // Hex color
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Experience {
  id          String   @id @default(cuid())
  role        String
  company     String
  date        String   // e.g. "2023 - Present"
  description String
  current     Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Profile {
  id          String   @id @default(cuid())
  headline    String
  subheadline String?
  about       String
  
  // Socials
  github      String?
  linkedin    String?
  twitter     String?
  email       String?  // Contact email
  
  // Assets
  resumeUrl   String?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
